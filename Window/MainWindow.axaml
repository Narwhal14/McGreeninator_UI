						<Label Content="TEMP"  HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="50" Canvas.Top="250" FontSize="50" FontStyle="Oblique" Foreground="White" />
					</Canvas>
					<Canvas
						Grid.Column="1"
						Grid.Row="0"
						Name="drw_Humidity"
						Margin="20"
						>
						<Ellipse Fill="LightGreen" Height="250" Width="250"/>
						<Arc
							Height="250"
							Width="250"
							StrokeThickness="50"
							Stroke="Yellow"
							StartAngle="270"
							SweepAngle="100"
							/>
						<Ellipse Fill="Blue" Height="150" Width="150" Canvas.Left ="48" Canvas.Top="48"/>
						<Label Name="lbl_Humid" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Content="05.42" Canvas.Left="65" Canvas.Top="95" FontSize="40" Foreground="White" ></Label>
