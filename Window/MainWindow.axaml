							VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
							VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  
							Grid.Column="0"  Grid.ColumnSpan ="2" Grid.Row="3" Margin="10" 
							FontSize="40" Foreground="White" Background="Gray"   FontStyle="Oblique" />
					<Button Name="btn_Water" Content="Water"
							VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
							VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
							Grid.Column="0"  Grid.ColumnSpan ="1" Grid.Row="4" Margin="10"
							FontSize="40" Foreground="White" Background="Gray"   FontStyle="Oblique" />
					<NumericUpDown Name="txt_WaterAmmount"  Value="500"
								    Increment="50" 
							 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
							VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
							Grid.Column="1"  Grid.Row="4" Margin="10"
							FontSize="40" Foreground="Black" Background="LightBlue" FontStyle="Oblique" />					
				</Grid>
			</TabItem>
			<TabItem  
