						VerticalAlignment="Center" 
						HorizontalAlignment="Center" 
						FontSize="40" 
						FontWeight="Bold" 
						Content="Environment"

						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>
					
					
					
					
					
					<!--Temperature-->
					
