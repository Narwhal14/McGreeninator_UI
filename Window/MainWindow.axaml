						Grid.Column="0" 
						Grid.Row="1" 
						VerticalAlignment="Center"
						FontSize="20"
						FontWeight="Bold"
						Content="Temperature"

						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>
					<Slider
						Grid.Column="1"
						Grid.Row="1"
						VerticalAlignment="Center">
