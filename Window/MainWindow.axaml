					<Label
						 Name="lbl_Nitrogen"
						 Grid.Column="2"
						 Grid.Row="6"
						 VerticalAlignment="Center"		
						Content="0"
						 FontSize="40"
						 Padding="10"
					
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>

					<!--ListBox Pump-->

					<Label
						Content="Pump"
						Grid.Column="4"
						Grid.Row ="0"
						Grid.ColumnSpan="2"
