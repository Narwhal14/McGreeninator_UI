						 Grid.Column="2"
						 Grid.Row="2"
						 VerticalAlignment="Center"		
						Content="0"
						 FontSize="40"
						 Padding="10"
					
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>
					
					<!--Nutrition-->
					
					<Slider 
						Grid.Column="1" 
						Grid.Row="3" 
						VerticalAlignment="Center">
