								 FontSize="20" FontWeight="3" />
					<RadioButton Name ="rb_Serial" Content="SERIAL" Grid.Column="3" Grid.Row="8"
							 VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"
								 FontSize="20" FontWeight="3" />

