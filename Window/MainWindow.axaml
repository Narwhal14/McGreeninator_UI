						Grid.Row="4"
						VerticalAlignment="Center"
						FontSize="20"
						FontWeight="Bold"
					Content="Phosphorus"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center">
					</Label>
					<Slider 
						Name="sld_Phosphorus" 
