					<Label 
						Grid.Column="0"
						Grid.Row="3"
						VerticalAlignment="Center"
						FontSize="20"
						FontWeight="Bold"
					Content="Nutrition"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center">
