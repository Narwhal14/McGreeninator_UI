					</Canvas>

					<Canvas
						Grid.Column="2"
						Grid.Row="0"
						Name="drw_PH"
					Margin="20"
						>
						
						<Ellipse Fill="LightGreen" Height="250" Width="250"/>
						<Arc
							Height="250"
							Width="250"
							StrokeThickness="50"
							Stroke="Yellow"
							StartAngle="270"
							SweepAngle="200"				
							/>
						<Ellipse Fill="Blue" Height="150" Width="150" Canvas.Left ="48" Canvas.Top="48"/>
						<Label Name="lbl_PH" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Content="05.42" Canvas.Left="65" Canvas.Top="95" FontSize="40" Foreground="White" ></Label>
						<Label Content="PH"  HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="90" Canvas.Top="250" FontSize="50" FontStyle="Oblique" Foreground="White" />

						
					</Canvas>
<Label 
	Grid.Column="3"
	Grid.Row="0"
	Content ="Phosphorus"
	FontSize ="30"
	Foreground="white"
	FontStyle="Oblique"
	Margin="10"
	HorizontalAlignment="Center"
	VerticalAlignment="Center"
	
	/>
					<Label
	Grid.Column="3"
	Grid.Row="1"
	Content ="Potassium"
	FontSize ="30"
	Foreground="white"
	FontStyle="Oblique"
	Margin="10"
	
	HorizontalAlignment="Center"
	VerticalAlignment="Center"
	
	/>
					<Label
	Grid.Column="3"
	Grid.Row="2"
	Content ="Nitrogen"
	FontSize ="30"
	Foreground="white"
	FontStyle="Oblique"
Margin="10"
HorizontalAlignment="Center"
VerticalAlignment="Center"
	
	/>
					<TextBox Name="txt_Phosphor" Grid.Column ="4" Grid.Row="0" Margin="10"/>
					<TextBox Name="txt_Potassium" Grid.Column ="4" Grid.Row="1" Margin="10"/>
					<TextBox Name="txt_Nitrogen" Grid.Column ="4" Grid.Row="2" Margin="10"/>
