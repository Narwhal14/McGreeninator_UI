						 Grid.Column="2"
						 Grid.Row="4"
						 VerticalAlignment="Center"		
						Content="0"
						 FontSize="40"
						 Padding="10"
					
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>
<!--Potassium-->
					
					<Label
						Grid.Column="0"
						Grid.Row="5"
						VerticalAlignment="Center"
						FontSize="20"
						FontWeight="Bold"
					Content="Potassium"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center">
					</Label>
					<Slider 
						Name="sld_Potassium" 
						Grid.Column="1"
						Grid.Row="5" 
						VerticalAlignment="Center"
						Maximum="100"> 
					</Slider>
					<Label
						 Name="lbl_Potassium"
						 Grid.Column="2"
						 Grid.Row="5"
						 VerticalAlignment="Center"		
						Content="0"
						 FontSize="40"
						 Padding="10"
					
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center">
					</Label>
<!--Nitrogen-->
					
					<Label
						Grid.Column="0"
						Grid.Row="6"
						VerticalAlignment="Center"
						FontSize="20"
						FontWeight="Bold"
					Content="Nitrogen"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center">
					</Label>
					<Slider 
						Name="sld_Nitrogen" 
						Grid.Column="1"
						Grid.Row="6" 
						VerticalAlignment="Center"
						Maximum="100"> 
